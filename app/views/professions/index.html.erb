
<div class="container">
  <h1>Profession index</h1>
  <p> RESTRICTED ACCESS</p>

  <div class="section">
    <h2>CREATE Profession</h2>
    <div class="create-profession">
      <%= link_to "NEW PROFFESSION", new_profession_path , class: 'btn-flat'%>
    </div>

  </div>

  <div class="mb-3 mt-3">
    <h1>Current Professions</h1>
  </div>

  <div class="cards-professions">
    <% @professions.each do |profession| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= profession.name %></h5>
        <p class="card-text">Recommended price <%= profession.recommended_price %></p>
        <p class="card-text">Number of worker <%= Profile.joins(:my_professions).where(my_professions:{profession_id: profession.id}).count %></p>
        <%= link_to 'Edit', edit_profession_path(profession) %>
      </div>
    </div>
    <% end %>
  </div>

</div>
