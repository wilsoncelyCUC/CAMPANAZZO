<h2>Enviame los pasos para reiniciar password</h2>

<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>

  <div class="form-inputs">
    <%= f.input :whatsapp,
                required: true,
                autofocus: true,
                value: (resource.pending_reconfirmation? ? resource.unconfirmed_whatsapp : resource.whatsapp),
                input_html: { autocomplete: "whatsapp" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Enviame los pasos para reiniciar password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
