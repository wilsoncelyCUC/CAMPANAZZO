<%= simple_form_for(@profile) do |f| %>
    <%= f.input :name,
                label: 'Nombre',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" } %>
    <%= f.input :last_name, label: 'Apellido',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last_name" } %>
    <%= f.input :birthday ,
                :as => :date,
                :start_year => Date.today.year - 60,
                :end_year => Date.today.year - 12,
                :order => [:day, :month, :year],
                label: 'Fecha de nacimiento'%>
    <%= f.input :address , label: 'DirecciÃ³n'%>
    <%= f.input :photo, label: 'Foto de Perfil',  as: :file %>
    <%= f.input :personal_number,
                label: 'Cedula',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "personal_number" } %>

