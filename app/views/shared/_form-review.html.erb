<div class="" data-controller="start-rating">
      <%= simple_form_for([@post, @review]) do |f| %>
        <%= f.input :description %>
        <%= f.input :score, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: { controller: "star-rating", action: "click->form-submit#submit"} }  %>
        <%= f.submit "enviar", class: "d-none" %>
     <% end %>
</div>
